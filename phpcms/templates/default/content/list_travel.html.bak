
{template "content","header"}


<div class="ui page" id="page"> 
   <div class="container">
   
    <div id="sdy" data-block-name="旅游列表"> 
				 <div class="menu" data-block-name="二级导航">
					<span>{$CATEGORYS[$catid][catname]}</span>
				 </div>
			
			  <ul class="f-items heng"> 
			 {pc:content action="lists" catid="$catid" num="20" order="id DESC" page="$page"}
			 {loop $data $key $r}
			 {if $key <2}
			  <li class="f-item"> 
			   <div class="f-pic"> 
				<a target="_blank" href="{$r[url]}">
				<img class="f-image" src="{$r[thumb]}" width="480" height="270" /></a> 
			   </div> <h4> 
			   <a class="f-link" target="_blank" href="{$r[url]}">{$r[description]}</a>			
			   <table cellspacing="0" cellpadding="0" border="0"> 
				<tbody> 
				 <tr> 
				  <td>出 发 地：</td> 
				  <td>{$r[travel_depart]}</td> 
				 </tr> 
				 <tr> 
				  <td>报名人数：</td> 
				  <td>{$r[apply_qty]} 人</td> 
				 </tr> 
				 <tr> 
				  <td>旅游天数：</td> 
				  <td>{$r[travel_days]} 天&nbsp;&nbsp;&nbsp;&nbsp;</td> 
				 </tr> 
				</tbody> 
			   </table> 
			   <div class="price">
				 ￥
				<em>{$r[travel_price]}</em>元起
			   </div> <a class="f-btn" href="#" target="_blank">立刻报名</a>
			   
			   </li>
				{/if}
			   {/loop}
			{/pc}

			 </ul>
	 

     <div class="shu"> 
      <ul class="f-items clearfix"> 

	  {pc:content action="lists" catid="$catid" num="20" order="id DESC" page="$page"}
     {loop $data $key $r}
	 {if $key >=2}

       <li class="f-item"> 
        <div class="f-wap"> 
         <a target="_blank" href="{$r[url]}"><img width="384" height="216" src="{$r[thumb]}" /></a> 
        </div> <a class="f-link fn-an" target="_blank" href="{$r[url]}"> <h4>{$r[description]}</h4> </a> 
        <div class="f-box"> 
         <span>出 发 地：{$r[travel_depart]}</span> 
         <span>旅游天数：{$r[travel_days]} 天</span> 
        </div> 
        <dl class="f-info"> 
         <dt class="f-money">
           ￥
          <em>{$r[travel_price]}</em>元起 
         </dt> 
         <dd class="f-prompt"> 
          <em>{$r[apply_qty]}人已报名</em> 
         </dd> 
        </dl> </li> 
		 {/if}
	   {/loop}
	  {/pc}

      </ul> 
     </div>
    </div> 


   </div>  
  </div>


{template "content","footer"}

<script type="text/javascript" src="/muban/Scripts/Xslider.js"></script>
<script src="/muban/Scripts/BannerChange.js" type="text/javascript"></script>
<script type="text/javascript">
$(function(){
	$(".productshow").Xslider({
		unitdisplayed:1,
		numtoMove:1,
		loop:"cycle",
		autoscroll:2000 
	});
	
})
$("a").attr('href',function(i,ov){return ov+'#here';});
 </script>
 </body>
</html>